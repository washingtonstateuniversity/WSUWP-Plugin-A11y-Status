{
  "name": "wsuwp-plugin-a11y-status",
  "version": "0.5.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/washingtonstateuniversity/wsuwp-plugin-a11y-status"
  },
  "author": "washingtonstateuniversity",
  "contributors": [
    {
      "name": "Adam Turner"
    }
  ],
  "license": "GPL-2.0+",
  "browserslist": [
    "> 1%",
    "ie 8-11",
    "Firefox ESR"
  ],
  "scripts": {
    "lint:php": "vendor/bin/phpcs -v --colors --extensions=php --ignore=\"*/vendor/*,*/node_modules/*\" --standard=phpcs.ruleset.xml *.php includes/",
    "lint:css": "stylelint \"src/_css/**/*.css\"",
    "clean": "rimraf {css/}",
    "style": "postcss src/_css/main.css --output css/main.css",
    "test": "run-p lint:*",
    "build": "run-s clean test style"
  },
  "devDependencies": {
    "cssnano": "^4.1.x",
    "npm-run-all": "^4.1.x",
    "postcss-cli": "^6.1.x",
    "postcss-preset-env": "^6.5.x",
    "rimraf": "^2.6.x",
    "stylelint": "^9.10.x"
  }
}
